{
    "fileWatcherPlugin": {
        "touchFile": "./public/index.php",
        "ignored": "./public/index.php",
        "watchFileGlobs": [
            "./public/**/*.js",
            "./public/**/*.css",
            "./public/**/*.php"
        ]
    },
    "wpThemeServer": {
        "enable": true,
        "hostname": "__from-window__",
        "port": 8090,
        "watchFile": "../index.php"
    },
    "injectWpThemeClient": {
        "override": null,
        "mode": "beforeToken",
        "token": "</body>",
        "file": "./build/index.php"
    }
}